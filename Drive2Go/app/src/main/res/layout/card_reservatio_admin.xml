<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- HEADER VERT -->
        <View
            android:id="@+id/headerBg"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_header_rounded"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Réservation #1"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Marie Dubois"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvResNum" />

        <!-- Badge Confirmée -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_price"
            android:backgroundTint="#33FFFFFF"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="✓ Confirmée"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- SECTION VÉHICULE -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_gray"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/headerBg">

            <TextView
                android:id="@+id/lblVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Véhicule"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="64dp" />


            <ImageButton
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/nav_item_bg"
                android:contentDescription="home"
                android:padding="7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_iconcar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renault Captur"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/lblVehicle"
                tools:layout_editor_absoluteX="64dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- SECTION PÉRIODE -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_gray"
            android:backgroundTint="@color/blue_bg"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/containerVehicle">

            <TextView
                android:id="@+id/lblPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Période"
                android:textColor="@color/text_gray"
                android:textSize="11sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="64dp" />

            <ImageButton
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/nav_item_bg"
                android:contentDescription="home"
                android:padding="7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_calendar_noir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-11-06\nau 2025-11-10"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/lblPeriod"
                tools:layout_editor_absoluteX="64dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- CONTACT INFO -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:text="marie.dubois@email.com"
            android:textColor="@color/text_dark"
            app:drawableStartCompat="@drawable/ic_email_noir"
            app:drawableTint="@color/text_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerPeriod" />


        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:text="06 12 34 56 78"
            android:textColor="@color/text_dark"
            app:drawableStartCompat="@drawable/ic_phone_noir"
            app:drawableTint="@color/text_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEmail" />

        <!-- PRIX TOTAL -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_rounded_price"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvPhone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€"
                android:textSize="24sp"
                android:textColor="@color/teal_primary"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="Prix total"
                android:textColor="@color/text_gray"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180€"
                android:textColor="@color/teal_text"
                android:textSize="24sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- BOUTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetails"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:paddingVertical="12dp"
            android:text="Voir les détails"
            android:textAllCaps="false"
            android:textColor="@color/text_dark"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textStart"
            app:iconTint="@color/text_dark"
            app:strokeColor="#E0E0E0"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/containerPrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>