<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. CHANGEMENT ICI : On utilise ConstraintLayout au lieu de LinearLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header / Toolbar -->
        <!-- Ajout des contraintes pour le coller en haut -->
        <LinearLayout
            android:id="@+id/toolbar"
            android:orientation="horizontal"
            android:background="@color/emerald_900"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/ic_car"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="@android:color/white"/>

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drive2go Users"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Conteneur principal du tableau de bord -->
        <!-- Hauteur à 0dp pour qu'il remplisse l'espace entre la toolbar et le bas -->
        <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Ajout de paddingBottom pour éviter que la dernière carte soit cachée par la barre -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="80dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Titres -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestion des users"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Carte 1 : Total -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="16dp"
                        android:background="@android:color/white">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:text="Total utilisateurs"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <TextView
                                    android:text="6"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/circle_bg2"
                                android:gravity="center">
                                <ImageView
                                    android:src="@drawable/ic_users"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"/>
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Carte 2 : Clients -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="16dp"
                        android:background="@android:color/white">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:text="Clients "
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <TextView
                                    android:text="5"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/circle_bg3"
                                android:gravity="center">
                                <ImageView
                                    android:src="@drawable/ic_clients"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"/>
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Carte 3 : Admin -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="16dp"
                        android:background="@android:color/white">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:text="Administrateur"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <TextView
                                    android:text="1"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/circle_bg4"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_admin" />
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Carte 4 : Actifs -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="16dp"
                        android:background="@android:color/white">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:text="Actifs"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <TextView
                                    android:text="5"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/circle_bg"
                                android:gravity="center">
                                <ImageView
                                    android:src="@drawable/ic_actif"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"/>
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Carte 5 : Recherche et Filtres -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        card_view:cardCornerRadius="16dp"
                        android:background="@android:color/white">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.SearchView
                                android:id="@+id/searchView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:queryHint="Rechercher..."
                                app:iconifiedByDefault="false"
                                android:layout_marginBottom="16dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menu_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Filtrer par statut">
                                <AutoCompleteTextView
                                    android:id="@+id/autoCompleteTxtRole"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:text="Tous les roles"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:hint="Filtrer par statut">
                                <AutoCompleteTextView
                                    android:id="@+id/autoCompleteTxtStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:text="Tous les status"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <!-- 3. VOTRE BARRE DE NAVIGATION FLOTTANTE -->
        <!-- Elle est maintenant positionnée correctement grâce au ConstraintLayout -->
        <include
            layout="@layout/layout_navbar_admin"
            android:layout_width="320dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>