<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenu principal -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header / Toolbar -->
        <LinearLayout
            android:id="@+id/toolbar"
            android:orientation="horizontal"
            android:background="@color/emerald_900"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/ic_car"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:tint="@android:color/white"/>

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drive2go Admin"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginStart="8dp"/>

            <ImageButton
                android:src="@drawable/ic_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:layout_marginLeft="180dp"/>
        </LinearLayout>

        <!-- Conteneur principal du tableau de bord -->
        <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Titres -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tableau de bord"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vue d'ensemble de votre activité"
                        android:textSize="20sp"
                        android:layout_marginBottom="24dp"/>

                    <!-- Carte 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="16dp"

                        android:background="@android:color/white">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <!-- Texte à gauche -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Véhicules disponibles"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>

                                <TextView
                                    android:text="24/34"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                            <!-- Icône avec fond -->
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/circle_bg"
                                android:gravity="center">

                                <ImageView
                                    android:src="@drawable/ic_car"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"/>
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Carte 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="16dp"

                        android:background="@android:color/white">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <!-- Texte à gauche -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Réservations actives "
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>

                                <TextView
                                    android:text="18"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                            <!-- Icône avec fond -->
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/cirlce_bg2"
                                android:gravity="center">

                                <ImageView
                                    android:src="@drawable/ic_calendar"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"/>
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Carte 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="16dp"

                        android:background="@android:color/white">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <!-- Texte à gauche -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Utilisateurs"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>

                                <TextView
                                    android:text="156"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                            <!-- Icône avec fond -->
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/circle_bg3"
                                android:gravity="center">

                                <ImageView
                                    android:src="@drawable/ic_car"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"/>
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Carte 4 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="16dp"

                        android:background="@android:color/white">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <!-- Texte à gauche -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Revenus du mois"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>

                                <TextView
                                    android:text="12 450 $"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                            <!-- Icône avec fond -->
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/circle_bg4"
                                android:gravity="center">

                                <ImageView
                                    android:src="@drawable/ic_car"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"/>
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!--histogrammme-->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="16dp"/>


                    <!-- BarChart -->





                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>

    <!-- Sidebar / Navigation Drawer -->

</androidx.drawerlayout.widget.DrawerLayout>
