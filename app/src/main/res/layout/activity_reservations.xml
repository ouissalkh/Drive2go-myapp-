<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Admin.Gestion_Reservations.ReservationsActivity">

    <!-- 1. Header / Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:orientation="horizontal"
        android:background="@color/emerald_900"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/ic_car"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:tint="@android:color/white"/>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drive2go Réservation"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginStart="8dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- 2. Conteneur principal avec ScrollView -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="70dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestion des reservations"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Carte 1 : Total -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    card_view:cardCornerRadius="16dp"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:text="Total"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <TextView
                                android:id="@+id/tv_total_count"
                                android:text="Chargement..."
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/darker_gray"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/circle_bg2"
                            android:gravity="center">
                            <ImageView
                                android:src="@drawable/ic_totalreservation"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carte 2 : Confirmées -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    card_view:cardCornerRadius="16dp"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:text="Confirmées"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <TextView
                                android:text="3"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/darker_gray"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/circle_bg"
                            android:gravity="center">
                            <ImageView
                                android:src="@drawable/ic_reservationconfirme"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carte 3 : En attente -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    card_view:cardCornerRadius="16dp"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:text="En attente"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <TextView
                                android:text="1"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/darker_gray"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/circle_bg4"
                            android:gravity="center">
                            <ImageView
                                android:src="@drawable/ic_reservationenattente"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carte 4 : Annulées -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    card_view:cardCornerRadius="16dp"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:text="Annulées"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <TextView
                                android:text="0"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/darker_gray"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/circle_bg_rouge"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="37dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_reservationannulee" />
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Carte 5 : Filtres -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    card_view:cardCornerRadius="16dp"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/searchView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:queryHint="Rechercher..."
                            app:iconifiedByDefault="false"
                            android:layout_marginBottom="16dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/menu_layout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Filtrer par statut">

                            <AutoCompleteTextView
                                android:id="@+id/autoCompleteTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:text="Tous les statuts"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- 3. Barre de navigation flottante en bas -->
    <include
        android:id="@+id/navbar"
        layout="@layout/layout_navbar_admin"
        android:layout_width="320dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
